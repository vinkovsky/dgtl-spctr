{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist/",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@ui/*": ["./common/ui/*"],
      "@components/*": ["./common/components/*"],
      "@models/*": ["./common/models/*"],
      "@hooks/*": ["./common/hooks/*"],
      "@styles/*": ["./common/styles/*"],
      "@utils/*": ["./common/utils/*"],
      "@features/*": ["./features/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
